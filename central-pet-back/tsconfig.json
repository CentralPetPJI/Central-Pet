{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDirs": ["./src", "../"],
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "src/",
    "../shared/**/*.ts"
  ],
  "exclude": ["node_modules"]
}